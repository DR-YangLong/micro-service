    <category name="java.sql.Statement">
        <level value="DEBUG"/>
        <appender-ref ref="CONSOLE"/>
    </category>
    <category name="java.sql.PreparedStatement">
        <level value="DEBUG"/>
        <appender-ref ref="CONSOLE"/>
    </category>
    <category name="org.apache.ibatis.jdbc.ScriptRunner">
        <level value="debug"/>
        <appender-ref ref="CONSOLE"/>
    </category>
    <category name="java.sql.ResultSet">
        <level value="debug"/>
        <appender-ref ref="console"/>
    </category>
    <category name="io.github.yanglong.demo.dao">
        <level value="debug"/>
        <appender-ref ref="console"/>
    </category>
    <root>
        <priority value="debug"/>
        <appender-ref ref="CONSOLE"/>
    </root>
</log4j:configuration>